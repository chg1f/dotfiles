export ZIM_CONFIG_FILE="$ZDOTDIR/.zimrc"
# Install modules and update Zim # Define zmodule
[[ -s "$ZIM_HOME/zimfw.zsh" ]] && source "$ZIM_HOME/zimfw.zsh" init -q
# Source Zim
[[ -s "$ZIM_HOME/init.zsh" ]] && source "$ZIM_HOME/init.zsh"

