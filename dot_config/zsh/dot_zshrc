export HOMEBREW_NO_INSTALL_FROM_API=1
export TMUX_PLUGIN_MANAGER_PATH="$XDG_DATA_HOME/tmux/plugins"
export FZF_DEFAULT_OPTS="--height=50% --layout=reverse --cycle --bind ctrl-f:preview-page-down,ctrl-b:preview-page-up,ctrl-e:preview-down,ctrl-y:preview-up"
export GOPATH="$XDG_DATA_HOME/go"

